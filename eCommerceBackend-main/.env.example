# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
# Para MongoDB Atlas, usa el formato:
# mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
# Para MongoDB local, usa:
# mongodb://localhost:27017/<database>
MONGODB_URI=mongodb://localhost:27017/ecommerce-multitenant

# JWT Configuration
# IMPORTANTE: Cambiar este secret en producción por uno seguro y único
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration
# En producción, especificar el dominio exacto del frontend
# Ejemplo: https://www.mi-ecommerce.com
CORS_ORIGIN=*
